  <content>{{include document="PhenoTips.PatientSheetMacros" /}}

{{velocity}}
  $xwiki.ssx.use('PhenoTips.PatientSheetCode')
  $xwiki.jsx.use('PhenoTips.FamilySheet')
  #set($familyObject = $doc.getObject('PhenoTips.FamilyClass'))
  #set($members = $familyObject.getProperty('members').getValue())
  ##
  {{html clean='false' wiki='true'}}
  &lt;div id='members' class='chapter clinical-info'&gt;
    == List of members ==
    &lt;div class='fieldset'&gt;
      #foreach ($m in $members)
        #set ($patient = $xwiki.getDocument("data.${m}"))
        #set ($externalId = $patient.getObject('PhenoTips.PatientClass').getProperty('external_id').getValue())
        &lt;div&gt;&lt;a href="$xwiki.getURL($patient.getDocumentReference())" class='member'&gt;$m 
        #if("$!{externalId}" != '') ($externalId) #end
        &lt;/a&gt;&lt;/div&gt;
      #end
    &lt;/div&gt;
  &lt;/div&gt;
  #if ($context.action != 'view' || !$doc.getObject('PhenoTips.FamilyClass').getProperty('reports').getValue().isEmpty())
    &lt;div id='reports' class='chapter clinical-info'&gt;
      == Reports ==
      &lt;div class='fieldset'&gt;
      $doc.display('reports', $familyObject)
      &lt;/div&gt;
    &lt;/div&gt;
  #end
  {{/html}}##
  (% id='pedigree' class='chapter clinical-info' %)(((
  #foreach ($e in $services.uix.getExtensions('org.phenotips.patientSheet.section.family-info'))
    #if ($e.getId() == 'org.phenotips.patientSheet.field.pedigree')
      {{html wiki=false clean=false}}$services.rendering.render($e.execute(), 'xhtml/1.0'){{/html}}
    #end
  #end
  )))
{{/velocity}}
</content>
