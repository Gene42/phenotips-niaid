<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="https://phenotips.org/"
  xmlns:phenotips="https://phenotips.org/" elementFormDefault="qualified">

  <complexType name="Link">
    <attribute name="href" type="string"/>
    <attribute name="rel" type="string"/>
    <attribute name="type" type="string"/>
    <attribute name="hrefLang" type="string"/>
  </complexType>

  <complexType name="LinkCollection">
    <sequence>
      <element name="link" type="phenotips:Link" minOccurs="0" maxOccurs="unbounded"/>
    </sequence>
  </complexType>

  <complexType name="UserSummary">
    <complexContent>
      <extension base="phenotips:LinkCollection">
        <sequence>
          <element name="id" type="string"/>
          <element name="name" type="string"/>
          <element name="email" type="string"/>
          <element name="type" type="string"/>
        </sequence>
      </extension>
    </complexContent>
  </complexType>

  <complexType name="CollaboratorSummary">
    <complexContent>
      <extension base="phenotips:UserSummary">
        <sequence>
          <element name="level" type="string"/>
        </sequence>
      </extension>
    </complexContent>
  </complexType>

  <complexType name="UserCollection">
    <complexContent>
      <extension base="phenotips:LinkCollection">
        <sequence>
          <element name="collaborators" type="phenotips:UserSummary" minOccurs="0" maxOccurs="unbounded"/>
        </sequence>
      </extension>
    </complexContent>
  </complexType>

  <complexType name="VisibilitySummary">
    <complexContent>
      <extension base="phenotips:LinkCollection">
        <sequence>
          <element name="level" type="string"/>
        </sequence>
      </extension>
    </complexContent>
  </complexType>

  <complexType name="VisibilityOptions">
    <complexContent>
      <extension base="phenotips:LinkCollection">
        <sequence>
          <element name="level" type="string" minOccurs="0" maxOccurs="unbounded"/>
        </sequence>
      </extension>
    </complexContent>
  </complexType>

  <complexType name="PermissionsSummary">
    <complexContent>
      <extension base="phenotips:LinkCollection">
        <sequence>
          <element name="owner" type="phenotips:UserSummary"/>
          <element name="visibility" type="phenotips:VisibilitySummary"/>
          <element name="collaborators" type="phenotips:UserCollection"/>
        </sequence>
      </extension>
    </complexContent>
  </complexType>

  <!--
  *
  * ELEMENTS
  *
  -->

  <!-- this bugger does not want to be generated as OwnerRepresentation class,
  like the rest - it generates as UserSummary -->
  <element name="ownerRepresentation" type="phenotips:UserSummary"/>

  <element name="collaboratorRepresentation" type="phenotips:CollaboratorSummary"/>

  <element name="patientVisibilityRepresentation" type="phenotips:VisibilitySummary"/>

  <element name="collaboratorsRepresentation" type="phenotips:UserCollection"/>

  <element name="visibilityOptionsRepresentation" type="phenotips:VisibilityOptions"/>

  <element name="permissionsRepresentation" type="phenotips:PermissionsSummary"/>
</schema>
