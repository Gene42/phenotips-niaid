<jaxb:bindings
  xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" jaxb:version="2.0"
  xmlns:annox="http://annox.dev.java.net"
  xmlns:xjc= "http://java.sun.com/xml/ns/jaxb/xjc"
  jaxb:extensionBindingPrefixes="xjc annox"
  xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <jaxb:globalBindings>
    <!--
      This enables the simple binding mode in JAXB.
      See http://weblogs.java.net/blog/kohsuke/archive/2006/03/simple_and_bett.html
    -->
    <xjc:simple/>

    <!-- Use JodaTime's DateTime for representing dates instead of JAXB's default, XMLGregorianCalendar. -->
    <xjc:javaType name="org.joda.time.DateTime" xmlType="xs:dateTime" adapter="org.phenotips.data.rest.DateTimeAdapter"/>
  </jaxb:globalBindings>
</jaxb:bindings>
