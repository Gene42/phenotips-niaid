    <property>
      <content>{{velocity}}
$xwiki.ssx.use('PhenoTips.UIX_Record_Validation')##
#foreach ($validationObject in $doc.getObjects('PhenoTips.PatientRecordValidationClass'))
  #if ($validationObject != $NULL)
    #set ($validatingUser = "$!{validationObject.getProperty('user').value}")
    #if ($xcontext.action == 'edit' &amp;&amp; $validatingUser == $xcontext.userReference.toString())
      (% class="attending-validation" %)(((
        $doc.display('validated', $validationObject)
      )))
    #elseif ($validatingUser != '' &amp;&amp; $validationObject.getProperty('validated').value == 1)
      (% class="attending-validation" %)(((
        Patient record validated by: $xwiki.getUserName($validatingUser, false) ($validationObject.getProperty('type').value)
      )))
    #end
  #end
#end
{{/velocity}}</content>
